<?xml version="1.0"?>
<root>
    <item>
        <name>F1-F2 to Mac Brightness</name>
        <identifier>private.fn1_fn2_to_mac_brightness</identifier>

        <autogen>__KeyToKey__ KeyCode::F1,  ConsumerKeyCode::BRIGHTNESS_DOWN</autogen>
        <autogen>__KeyToKey__ KeyCode::F2,  ConsumerKeyCode::BRIGHTNESS_UP</autogen>
    </item>

    <item>
        <name>F7-F9 to Playback Keys (Media)</name>
        <identifier>private.fn7_-_fn9_to_playback_keys</identifier>

        <autogen>__KeyToKey__ KeyCode::F7,  ConsumerKeyCode::MUSIC_PREV</autogen>
        <autogen>__KeyToKey__ KeyCode::F8,  ConsumerKeyCode::MUSIC_PLAY</autogen>
        <autogen>__KeyToKey__ KeyCode::F9,  ConsumerKeyCode::MUSIC_NEXT</autogen>
    </item>

    <item>
        <name>Shift_R + Escape to Tilde (~)</name>
        <identifier>private.shiftR_escape_to_tilde</identifier>

        <autogen>
            __KeyToKey__
            KeyCode::ESCAPE, ModifierFlag::SHIFT_R,
            KeyCode::BACKQUOTE, ModifierFlag::SHIFT_L
        </autogen>
    </item>

    <item>
        <name>Command_R + Escape to Backquote (`)</name>
        <identifier>private.commandR_escape_to_backquote</identifier>

        <autogen>
            __KeyToKey__
            KeyCode::ESCAPE, ModifierFlag::COMMAND_R,
            KeyCode::BACKQUOTE
        </autogen>
    </item>

    <item>
        <name>Control+Shift+Delete to Control+Shift+Eject (Sleep displays)</name>
        <identifier>remap.control_shift_delete_to_sleep</identifier>
        <autogen>
            __KeyToKey__
            KeyCode::DELETE, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L,
            ConsumerKeyCode::EJECT, ModifierFlag::CONTROL_L | ModifierFlag::SHIFT_L
        </autogen>
    </item>
</root>
