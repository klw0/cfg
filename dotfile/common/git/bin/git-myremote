#!/bin/sh
#
# Proxy for my remote's git shell commands.

set -eu

usage() {
    die "usage: ${0##*/} [-a address] desc|help|list|info|init [arg ...]"
}

die() {
    message="$1"

    echo "${message}" 1>&2
    exit 1
}

main() {
    addr="${GIT_MYREMOTE_ADDR:-}"
    while getopts "a:h" opt; do
        case "${opt}" in
            a) addr="${OPTARG}" ;;
            h | ?) usage ;;
        esac
    done
    shift $((OPTIND - 1))

    if [ -z "${addr}" ]; then
        echo "Set environment variable GIT_MYREMOTE_ADDR or use \
'-a address' option to set the remote address." 1>&2
        die "error: addr not set"
    fi

    if [ "$#" -lt 1 ]; then
        usage
    fi

    command="$1"
    case "${command}" in
        desc | help | list | info | init) shift ;;
        *) usage ;;
    esac

    # Requote remaining arguments since ssh will "flatten" command and arguments
    # before sending to the server.
    args=
    for arg in "$@"; do
        args="${args} '${arg}'"
    done

    ssh "${addr}" -- "${command}" "${args}"
}

main "$@"
