# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.lua]
indent_size = 2

[*.yaml]
indent_size = 2

[{.vimrc,*.vim}]
indent_size = 2

[{*.c,*.h}]
indent_style = tab

[*.go]
indent_style = tab
